    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "server",
            ]
        },
        {
            "name": "Run Server Prod",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "server",
                "--prod"
            ]
        },
        {
            "name": "Run Server (Postgres)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "server",
                "-d",
                "postgres"
            ]
        },
        {
            "name": "Run Server (Mongo)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "server",
                "-d",
                "mongo"
            ]
        }
    ]
}